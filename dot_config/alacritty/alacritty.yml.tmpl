cursor:
  style:
    blinking: Always
    shape: Beam

font:
  normal:
    family: JetBrainsMono Nerd Font
    style: Regular

  bold:
    style: Semibold

  italic:
    style: Italic

  bold_italic:
    style: SemiBold Italic

  size: 12.0

mouse:
  hide_when_typing: false

scrolling:
  history: 100000

shell:
  program: {{ env "package_manager_prefix" }}/bin/bash
  args:
    - --login

window:
  decorations: buttonless
  opacity: 1.0
  startup_mode: Maximized
