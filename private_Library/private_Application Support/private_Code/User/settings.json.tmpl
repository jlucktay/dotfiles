{
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[go.mod]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    },
    "editor.snippetSuggestions": "none"
  },
  "[go][go.mod]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  "[helm]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[rust]": {
    "editor.indentSize": "tabSize",
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "ansible.executionEnvironment.pull.policy": "always",
  "chat.agent.enabled": false,
  "chat.commandCenter.enabled": false,
  "chat.notifyWindowOnConfirmation": false,
  "cunneen-copy-breadcrumbs.separationString": ".",
  "cunneen-copy-breadcrumbs.showAlert": false,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "docker.extension.dockerEngineAvailabilityPrompt": false,
  "docker.extension.enableComposeLanguageServer": false,
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "line-thin",
  "editor.detectIndentation": false,
  "editor.emptySelectionClipboard": false,
  "editor.find.cursorMoveOnType": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "alt",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "trailing",
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "explorer.confirmDragAndDrop": false,
  "explorer.excludeGitIgnore": true,
  "explorer.incrementalNaming": "smart",
  "explorer.openEditors.sortOrder": "alphabetical",
  "explorer.sortOrder": "type",
  "files.associations": {
    "*.mmark": "markdown",
    "*.tmpl": "go-template",
    ".chezmoiignore": "ignore",
    ".env": "properties",
    ".firebaserc": "json",
    ".gcloudignore": "ignore",
    ".gitconfig": "properties",
    ".gitconfig.aliases": "properties",
    "htoprc": "properties"
  },
  "files.autoSave": "onFocusChange",
  "files.defaultLanguage": "${activeEditorLanguage}",
  "files.enableTrash": false,
  "files.eol": "\n",
  "files.exclude": {
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/CVS": true
  },
  "files.hotExit": "onExitAndWindowClose",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.ammonite": true,
    "**/.bloop": true,
    "**/.metals": true
  },
  "git.autoRepositoryDetection": false,
  "git.autoStash": true,
  "git.autofetch": "all",
  "git.autofetchPeriod": 30,
  "git.blame.editorDecoration.enabled": false,
  "git.confirmSync": false,
  "git.countBadge": "off",
  "git.defaultCloneDirectory": "{{ .chezmoi.homeDir }}/git",
  "git.enableStatusBarSync": false,
  "git.fetchOnPull": true,
  "git.ignoreLimitWarning": true,
  "git.openRepositoryInParentFolders": "always",
  "go.alternateTools": {
    "go": "{{ lookPath "go" }}"
  },
  "go.diagnostic.vulncheck": "Imports",
  "go.editorContextMenuCommands": {
    "fillStruct": true
  },
  "go.lintTool": "golangci-lint",
  "go.testEnvVars": {
    "IS_NO_COLOR": 1
  },
  "go.testExplorer.packageDisplayMode": "nested",
  "go.testFlags": ["--count=1", "-v"],
  "go.toolsGopath": "{{ .chezmoi.homeDir }}/vscode-go",
  "go.toolsManagement.autoUpdate": true,
  "go.toolsManagement.checkForUpdates": "local",
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true,
    "ui.codelenses": {
      "run_govulncheck": true,
      "vendor": false
    },
    "ui.completion.usePlaceholders": true,
    "ui.diagnostic.analyses": {
      "nilness": true,
      "unusedparams": true,
      "unusedvariable": true,
      "unusedwrite": true,
      "useany": true
    },
    "ui.diagnostic.staticcheck": true,
    "ui.navigation.importShortcut": "Both",
    "verboseOutput": true
  },
  "hadolint.cliOptions": ["--no-color"],
  "hadolint.hadolintPath": "/opt/homebrew/bin/hadolint",
  "helm-ls.valuesFiles": {
    "additionalValuesFilesGlobPattern": "values*.yaml",
    "lintOverlayValuesFile": "values.lint.yaml",
    "mainValuesFile": "values.yaml"
  },
  "helm-ls.yamlls": {
    "config": {
      "completion": true,
      "disableDefaultProperties": false,
      "editor": {
        "formatOnType": false
      },
      "format": {
        "bracketSpacing": false,
        "enable": true,
        "proseWrap": false,
        "singleQuote": true
      },
      "hover": true,
      "keyOrdering": false,
      "schemaStore": {
        "enable": true
      },
      "schemas": {
        "kubernetes": "templates/**"
      },
      "validate": true
    },
    "diagnosticsLimit": 50,
    "enabled": true,
    "enabledForFilesGlob": "*.{yaml,yml}",
    "initTimeoutSeconds": 5,
    "path": "yaml-language-server",
    "showDiagnosticsDirectly": true
  },
  "keyboard.touchbar.ignored": [
    "workbench.action.debug.run",
    "workbench.action.debug.start"
  ],
  "ltex.dictionary": {
    "en-AU": [":{{ .chezmoi.homeDir }}/ltex.dictionary.en-AU.txt"]
  },
  "ltex.enabled": ["markdown"],
  "ltex.language": "en-AU",
  "ltex.statusBarItem": true,
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.extension.orderedList.autoRenumber": false,
  "markdown.extension.orderedList.marker": "one",
  "markdown.extension.toc.levels": "2..6",
  "markdown.preview.doubleClickToSwitchToEditor": false,
  "markdown.preview.scrollEditorWithPreview": false,
  "markdown.styles": [
    "https://use.fontawesome.com/releases/v6.4.2/css/all.css"
  ],
  "material-icon-theme.folders.associations": {
    "infra": "components"
  },
  "prettier.singleQuote": true,
  "redhat.telemetry.enabled": true,
  "search.defaultViewMode": "tree",
  "search.searchEditor.reusePriorSearchConfiguration": true,
  "search.searchOnType": false,
  "shellcheck.customArgs": [
    "--enable=all",
    "--exclude=SC2250",
    "--external-sources",
    "--severity=style",
    "--shell=bash"
  ],
  {{- if lookPath "shellcheck" }}
  "shellcheck.executablePath": "{{ lookPath "shellcheck" }}",
  {{- end }}
  "shellformat.effectLanguages": [
    "azcli",
    "bats",
    "dotenv",
    "gitignore",
    "hosts",
    "ignore",
    "jvmoptions",
    "properties",
    "shellscript",
    "spring-boot-properties"
  ],
  "shellformat.flag": "--binary-next-line --case-indent --indent 2 --simplify --space-redirects",
  {{- if lookPath "shfmt" }}
  "shellformat.path": "{{ lookPath "shfmt" }}",
  {{- end }}
  "shellformat.useEditorConfig": false,
  "sortLines.sortEntireFile": true,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.osx": "Bash (login)",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.profiles.osx": {
    "Bash (login)": {
      "args": ["--login"],
      "icon": "terminal-bash",
      {{- if lookPath "bash" }}
      "path": "{{ lookPath "bash" }}"
      {{- end }}
    }
  },
  "terminal.integrated.scrollback": 999999,
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.showExitAlert": false,
  "update.showReleaseNotes": false,
  "vs-kubernetes": {
    "checkForMinikubeUpgrade": false,
    "vs-kubernetes.crd-code-completion": "enabled",
    "vs-kubernetes.knownKubeconfigs": ["{{ .chezmoi.homeDir }}/.kube/config"],
    "vs-kubernetes.kubeconfig": "{{ .chezmoi.homeDir }}/.kube/config"
  },
  {{- if lookPath "helm" }}
  "vscode-kubernetes.helm-path-mac": "{{ lookPath "helm" | replaceAllRegex "helm/[^/]+/darwin-arm64/helm" "helm/latest/darwin-arm64/helm" }}",
  {{- end }}
  {{- if lookPath "kubectl" }}
  "vscode-kubernetes.kubectl-path-mac": "{{ lookPath "kubectl" | replaceAllRegex "kubectl/[^/]+/kubectl" "kubectl/latest/kubectl" }}",
  {{- end }}
  {{- if lookPath "minikube" }}
  "vscode-kubernetes.minikube-path-mac": "{{ lookPath "minikube" }}",
  {{- end }}
  "window.closeWhenEmpty": true,
  "window.commandCenter": true,
  "window.newWindowDimensions": "maximized",
  "window.openWithoutArgumentsInNewWindow": "on",
  "window.restoreWindows": "preserve",
  "window.title": "${activeFolderMedium}/${activeEditorShort}${separator}${rootName}",
  "workbench.colorTheme": "Default Dark+",
  "workbench.editor.decorations.colors": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.panel.opensMaximized": "always",
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.tree.renderIndentGuides": "always",
  "yaml.format.bracketSpacing": false,
  "yaml.format.printWidth": 160,
  "yaml.format.singleQuote": true
}
