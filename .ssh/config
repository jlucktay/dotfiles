# This is how we configure throwaway VMs when we DGAF about what happens to them ¯\_(ツ)_/¯
Host jlsd
    CheckHostIP no
    HostName jlsd-dns.uksouth.cloudapp.azure.com
    IdentityFile ~/.ssh/id_rsa_azuresandbox
    StrictHostKeyChecking no
    UpdateHostKeys yes
    User sandboxadmin
    UserKnownHostsFile /dev/null
    VerifyHostKeyDNS no

Host jbdam
    HostName jbdam-jump2.westeurope.cloudapp.azure.com
    User jlucktay

# This is the wildcard/apply-to-everything section
Host *
    AddKeysToAgent yes
    UseKeychain yes
    IdentityFile ~/.ssh/id_rsa
