# These first 3 hosts are how we configure throwaway VMs when we DGAF about what
# happens to them ¯\_(ツ)_/¯
Host jlsd
    CheckHostIP no
    HostName jlsd-dns.uksouth.cloudapp.azure.com
    IdentityFile ~/.ssh/id_rsa_azuresandbox
    StrictHostKeyChecking no
    UpdateHostKeys yes
    User sandboxadmin
    UserKnownHostsFile /dev/null
    VerifyHostKeyDNS no

Host jl12
    CheckHostIP no
    HostName jl12.westeurope.cloudapp.azure.com
    IdentityFile ~/.ssh/id_rsa_azuresandbox
    StrictHostKeyChecking no
    UpdateHostKeys yes
    User jlucktay
    UserKnownHostsFile /dev/null
    VerifyHostKeyDNS no

Host jl15
    CheckHostIP no
    HostName jl15.westeurope.cloudapp.azure.com
    IdentityFile ~/.ssh/id_rsa_azuresandbox
    StrictHostKeyChecking no
    UpdateHostKeys yes
    User jlucktay
    UserKnownHostsFile /dev/null
    VerifyHostKeyDNS no

# This is the wildcard/apply-to-everything section
Host *
    AddKeysToAgent yes
    UseKeychain yes
    IdentityFile ~/.ssh/id_rsa
